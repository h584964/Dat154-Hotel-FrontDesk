<Window x:Class="FrontDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontDesk"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Hotel Trivago" VerticalAlignment="Top" FontWeight="Bold" FontSize="30" FontStyle="Italic"/>

        <Button Grid.Row="1" Content="Reservations" Click="ManageReservations_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="304" Height="111" Foreground="White" Background="SkyBlue"/>
        <Button Grid.Row="2" Content="Rooms" Click="ManageRooms_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="304" Height="111" Foreground="White" Background="SkyBlue"/>
        <Button Grid.Row="3" Content="Check-In/Out" Click="CheckInOut_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="304" Height="111" Foreground="White" Background="SkyBlue"/>
    </Grid>




</Window>
